# ============================================================================
# OpenClaw - Citation & Bibliography Manager
# Copy this file to .env and fill in your values
# Usage: ./install.sh --env-file .env
# ============================================================================

# ---- AI Provider ----
AI_PROVIDER=grok
OPENCLAW_PRIMARY_MODEL=grok-3
XAI_API_KEY=
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_GEMINI_API_KEY=
OPENROUTER_API_KEY=

# ---- Channels ----
TELEGRAM_BOT_TOKEN=
DISCORD_BOT_TOKEN=
SLACK_BOT_TOKEN=
SLACK_APP_TOKEN=
WHATSAPP_ENABLED=false

# ---- SMTP ----
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=openclaw@localhost

# ---- Gateway ----
OPENCLAW_GATEWAY_TOKEN=
OPENCLAW_GATEWAY_BIND=lan

# ---- Desktop / VNC ----
ENABLE_VNC=true
VNC_PASSWORD=
DISPLAY_RESOLUTION=1920x1080x24

# ---- Tor ----
TOR_ENABLED=true

# ---- Use Case Specific ----
CITATION_DB=workspace/citations.json\nDEFAULT_STYLE=apa\nSEARCH_DATABASES=google_scholar,crossref


# ---- Selected Services (comma-separated) ----
# Leave empty for interactive selection, or specify:
# OPENCLAW_SERVICES=telegram,slack,browser,cron,gmail-gog,memory,logger
OPENCLAW_SERVICES=

# ---- Health Check Monitoring ----
# URL of the OpenClaw Health Check dashboard server
# Set this to auto-register this instance for monitoring
HEALTHCHECK_SERVER_URL=
